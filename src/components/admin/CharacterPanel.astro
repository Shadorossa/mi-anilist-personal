<div id="characters-panel" class="panel hidden">
    <div class="flex flex-col items-center mb-4 shrink-0">
        <div class="flex flex-col items-center pt-1">
            <h2 class="text-lg font-bold text-white tracking-tight">
                Buscador de Personajes
            </h2>
            <div class="w-32 h-px bg-white/10 mt-2 mb-4"></div>
        </div>
        <form
            id="charSearchForm"
            class="relative"
            onsubmit="event.preventDefault();"
            data-search-mode="character"
        >
            <input
                type="text"
                id="charInput"
                placeholder="Buscar personaje..."
                autocomplete="off"
                class="form-input !w-64 !text-xs !pr-16"
            />
            <button
                type="button"
                id="charSearchModeBtn"
                onclick="toggleCharSearchMode()"
                class="absolute top-0 right-9 h-full px-3 text-gray-500 hover:text-white transition-colors"
                title="Buscar por nombre de personaje"
            >
                <i class="fa-solid fa-user text-xs"></i>
            </button>
            <button
                type="submit"
                class="absolute top-0 right-0 h-full px-3 text-gray-500 hover:text-white transition-colors"
                ><i class="fa-solid fa-search text-xs"></i></button
            >
        </form>
    </div>
    <div class="custom-scrollbar flex-1">
        <div id="charResults" class="asearch-grid"></div>
    </div>
</div>
