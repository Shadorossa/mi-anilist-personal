<div id="search-panel" class="panel">
    <div class="flex flex-col items-center mb-4 shrink-0">
        <div class="flex flex-col items-center pt-1">
            <h2 class="text-lg font-bold text-white tracking-tight">
                Buscador de Obras
            </h2>
            <div class="w-32 h-px bg-white/10 mt-2 mb-4"></div>
        </div>
        <div class="flex items-center gap-4">
            <select
                id="mediaType"
                class="form-input !w-auto !text-xs !font-bold"
            >
                <option value="game">Juegos</option>
                <option value="anime">Anime</option>
                <option value="manga">Manga</option>
            </select>
            <form
                id="searchForm"
                class="relative"
                onsubmit="event.preventDefault();"
            >
                <input
                    type="text"
                    id="searchInput"
                    placeholder="Buscar obra..."
                    autocomplete="off"
                    class="form-input !w-64 !text-xs"
                />
                <button
                    type="submit"
                    class="absolute top-0 right-0 h-full px-3 text-gray-500 hover:text-white transition-colors"
                    ><i class="fa-solid fa-search text-xs"></i></button
                >
            </form>
        </div>
    </div>
    <div class="custom-scrollbar flex-1">
        <div id="searchResults" class="asearch-grid"></div>
    </div>
</div>
