<div id="search-panel" class="panel flex-1 flex flex-col p-8 min-h-0 h-full">
    <div class="search-bar-container">
        <select id="mediaType" class="form-input !w-auto !text-xs !font-bold">
            <option value="game">Juegos</option>
            <option value="anime">Anime</option>
            <option value="manga">Manga</option>
        </select>
        <form
            id="searchForm"
            class="search-form"
            onsubmit="event.preventDefault();"
        >
            <input
                type="text"
                id="searchInput"
                placeholder="Buscar obra..."
                autocomplete="off"
                class="search-input"
            />
            <button type="submit" class="search-btn"
                ><i class="fa-solid fa-search"></i></button
            >
        </form>
    </div>
    <div class="custom-scrollbar flex-1">
        <div id="searchResults" class="asearch-grid"></div>
    </div>
</div>
