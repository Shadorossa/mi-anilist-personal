---
const { profile, bannerPath, avatarPath, stats } = Astro.props;
---

<header class="relative w-full mb-12">
    <div class="h-96 w-full overflow-hidden relative">
        <img
            src={bannerPath}
            onerror="this.src='https://placehold.co/1500x500/111/333?text=Banner'"
            class="w-full h-full object-cover opacity-100"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-[#050505] via-transparent to-transparent"
        >
        </div>

        <a
            href="/admin"
            class="absolute top-6 right-6 glass px-4 py-2 rounded-full text-xs font-bold text-white hover:bg-white/10 transition border border-white/5 flex items-center gap-2 z-20"
        >
            <i class="fa-solid fa-gear"></i>
            <span>Admin</span>
        </a>
    </div>

    <!-- Avatar, Username, Bio container -->
    <div
        class="absolute -bottom-10 left-0 w-full px-4 md:px-12 z-10 max-w-7xl mx-auto"
    >
        <div class="flex items-end gap-6">
            <!-- Avatar -->
            <div class="relative w-72 h-[26rem] md:w-96 md:h-[31.6rem] -mb-20">
                <img
                    src={avatarPath}
                    onerror="this.src='https://placehold.co/400x600?text=U'"
                    class="w-full h-full object-contain drop-shadow-[0_10px_15px_rgba(0,0,0,0.4)]"
                />
            </div>
            <!-- Name and Bio -->
            <div class="mb-16">
                <h1
                    class="text-5xl md:text-6xl font-black text-white tracking-tighter drop-shadow-2xl"
                >
                    {profile.username}
                </h1>
                <p class="text-gray-400 text-sm font-medium mt-2">
                    {profile.bio}
                </p>
            </div>
        </div>
        <!-- The line the character rests on -->
        <div class="h-px w-full bg-white/10"></div>
    </div>

    <!-- Stats block - positioned separately for better control -->
    <div
        class="absolute bottom-4 right-0 px-4 md:px-12 w-full max-w-7xl mx-auto flex justify-end"
    >
        <div
            class="hidden md:flex gap-4 bg-[#0a0a0c] px-6 py-3 rounded-xl border border-white/5"
        >
            <div class="text-center">
                <span class="block text-2xl font-black text-white"
                    >{stats.total}</span
                >
                <span
                    class="text-[10px] text-gray-500 uppercase font-bold tracking-widest"
                    >Obras</span
                >
            </div>
            <div class="w-px bg-white/10"></div>
            <div class="text-center">
                <span class="block text-2xl font-black text-green-400"
                    >{stats.playing}</span
                >
                <span
                    class="text-[10px] text-gray-500 uppercase font-bold tracking-widest"
                    >Jugando</span
                >
            </div>
            <div class="w-px bg-white/10"></div>
            <div class="text-center">
                <span class="block text-2xl font-black text-blue-400"
                    >{stats.completed}</span
                >
                <span
                    class="text-[10px] text-gray-500 uppercase font-bold tracking-widest"
                    >Terminado</span
                >
            </div>
            <div class="w-px bg-white/10"></div>
            <div class="text-center">
                <span class="block text-2xl font-black text-yellow-400"
                    >{stats.pending}</span
                >
                <span
                    class="text-[10px] text-gray-500 uppercase font-bold tracking-widest"
                    >Pendiente</span
                >
            </div>
            <div class="w-px bg-white/10"></div>
            <div class="text-center">
                <span class="block text-2xl font-black text-red-400"
                    >{stats.dropped}</span
                >
                <span
                    class="text-[10px] text-gray-500 uppercase font-bold tracking-widest"
                    >Droppeado</span
                >
            </div>
        </div>
    </div>
</header>
