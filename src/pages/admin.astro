        <script is:inline>
            let currentSelection = null;
            let lastSearchResults = [];
            let isFavorite = false; // Estado temporal del editor

            // --- GESTIÃ“N DE MODOS ---
            window.switchMode = (mode) => {
                document
                    .querySelectorAll(".panel")
                    .forEach((p) => p.classList.add("hidden"));
                document.querySelectorAll(".mode-btn").forEach((b) => {
                    b.className =
                        "mode-btn px-5 py-2 rounded-full text-xs font-bold text-gray-400 hover:text-white border border-white/5 transition-all flex items-center gap-2";
                });
                document
                    .getElementById(`${mode}-panel`)
                    .classList.remove("hidden");
                const btn = document.querySelector(
                    `button[onclick="switchMode('${mode}')"]`,
                );
                btn.className =
                    "mode-btn active px-5 py-2 rounded-full text-xs font-bold text-white bg-white/10 ring-1 ring-white/10 shadow-lg transition-all flex items-center gap-2";

                if (mode === "library") renderLocalLibrary();
                if (mode === "favorites") renderFavoritesSortable();
            };

            // --- RENDER BIBLIOTECA LOCAL ---
            function renderLocalLibrary(filterText = "") {
                const container = document.getElementById("localGrid");
                const filtered = window.localLibrary.filter((item) =>
                    item.title.toLowerCase().includes(filterText.toLowerCase()),
                );
                container.innerHTML = filtered
                    .map(
                        (item) => `
                <div onclick='openEditorLocal(${JSON.stringify(item).replace(/'/g, "&#39;")})' class="card-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#18181b] ring-1 ring-white/5 hover:ring-indigo-500/50 hover:shadow-xl transition-all hover:-translate-y-1">
                    <img src="${item.cover}" class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-opacity">
                    ${item.favorite ? '<div class="absolute top-2 left-2 text-yellow-500 drop-shadow-md"><i class="fa-solid fa-heart"></i></div>' : ""}
                    <div class="absolute bottom-0 inset-x-0 p-3 bg-gradient-to-t from-black/90 to-transparent"><p class="text-xs font-bold text-white truncate">${item.title}</p></div>
                </div>
            `,
                    )
                    .join("");
            }
            document
                .getElementById("localFilter")
                .addEventListener("input", (e) =>
                    renderLocalLibrary(e.target.value),
                );

            // --- RENDER ORDENAR FAVORITOS (DRAG & DROP) ---
            function renderFavoritesSortable() {
                const container = document.getElementById("favList");
                container.innerHTML = window.favoritesList
                    .map(
                        (item) => `
                <div class="fav-item relative aspect-[2/3] bg-[#18181b] rounded-xl overflow-hidden cursor-grab ring-1 ring-white/10 hover:ring-white/30" data-id="${item.title}" data-full='${JSON.stringify(item).replace(/'/g, "&#39;")}' >
                    <img src="${item.cover}" class="w-full h-full object-cover pointer-events-none">
                    <div class="absolute top-2 left-2 bg-black/60 backdrop-blur-md w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold text-white border border-white/10 index-badge"></div>
                </div>
            `,
                    )
                    .join("");

                // Inicializar Sortable
                new Sortable(container, {
                    animation: 150,
                    ghostClass: "sortable-ghost",
                    dragClass: "sortable-drag",
                    onEnd: updateIndexes, // Actualizar nÃºmeros visualmente al soltar
                });
                updateIndexes();
            }

            function updateIndexes() {
                const badges = document.querySelectorAll(".index-badge");
                badges.forEach((badge, index) => {
                    badge.innerText = index + 1;
                });
            }

            // --- BUSCADOR API ---
            document
                .getElementById("searchForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const query = document.getElementById("searchInput").value;
                    const type = document.getElementById("mediaType").value;
                    const container = document.getElementById("searchResults");
                    container.innerHTML = `<div class="col-span-full py-20 text-center"><i class="fa-solid fa-circle-notch fa-spin text-3xl text-indigo-500"></i></div>`;
                    try {
                        const res = await fetch(
                            `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                        );
                        const data = await res.json();
                        lastSearchResults = data;
                        container.innerHTML = data
                            .map(
                                (item, idx) => `
                    <div onclick="openEditorSearch(${idx})" class="card-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#18181b] shadow-lg ring-1 ring-white/5 hover:-translate-y-2 transition-all">
                        <img src="${item.cover}" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity">
                        <div class="absolute bottom-0 p-3 w-full bg-gradient-to-t from-black/90 to-transparent"><h3 class="text-white font-bold text-xs truncate">${item.title}</h3></div>
                    </div>
                `,
                            )
                            .join("");
                    } catch (e) {
                        container.innerHTML = `<p class="col-span-full text-center text-red-400">Error</p>`;
                    }
                });

            // --- EDITOR ---
            window.openEditorSearch = (idx) => {
                const item = lastSearchResults[idx];
                const type = document.getElementById("mediaType").value;
                fillEditor({
                    ...item,
                    type:
                        type === "game"
                            ? "games"
                            : type === "manga"
                              ? "manga"
                              : "anime",
                });
            };
            window.openEditorLocal = (item) => fillEditor(item);

            function fillEditor(data) {
                currentSelection = data;
                document.getElementById("editor").classList.remove("hidden");
                document.getElementById("editorTitle").innerText = data.title;
                document.getElementById("editorYear").innerText =
                    data.year || "----";
                document.getElementById("editorCover").src = data.cover;

                // Estado
                const statusToSelect = data.status || "Jugando";
                const radios = document.getElementsByName("status");
                for (const r of radios) {
                    if (r.value === statusToSelect) r.checked = true;
                }

                // Nota
                const score = data.score || 0;
                document.getElementById("scoreRange").value = score;
                document.getElementById("scoreValue").innerText = score;

                // Favorito
                isFavorite = data.favorite || false;
                updateFavBtn();

                checkScoreLock();
            }

            window.closeEditor = () =>
                document.getElementById("editor").classList.add("hidden");

            // --- LOGICA FAVORITO ---
            window.toggleFav = () => {
                isFavorite = !isFavorite;
                updateFavBtn();
            };
            function updateFavBtn() {
                const btn = document.getElementById("favBtn");
                if (isFavorite) {
                    btn.className =
                        "w-10 h-10 rounded-full border border-red-500/50 flex items-center justify-center transition-all bg-red-500 text-white shadow-[0_0_15px_rgba(239,68,68,0.5)]";
                } else {
                    btn.className =
                        "w-10 h-10 rounded-full border border-white/10 flex items-center justify-center transition-all bg-[#202025] text-gray-500 hover:text-white";
                }
            }

            window.checkScoreLock = () => {
                const status = document.querySelector(
                    'input[name="status"]:checked',
                ).value;
                const range = document.getElementById("scoreRange");
                const container = document.getElementById("scoreContainer");
                if (status === "Completado") {
                    range.disabled = false;
                    container.style.opacity = "1";
                    if (document.getElementById("scoreValue").innerText === "-")
                        document.getElementById("scoreValue").innerText =
                            range.value;
                } else {
                    range.disabled = true;
                    container.style.opacity = "0.5";
                    document.getElementById("scoreValue").innerText = "-";
                }
            };
            document
                .getElementById("scoreRange")
                .addEventListener(
                    "input",
                    (e) =>
                        (document.getElementById("scoreValue").innerText =
                            e.target.value),
                );

            // --- GUARDAR INDIVIDUAL ---
            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveMediaBtn");
                    btn.innerText = "Guardando...";
                    btn.disabled = true;
                    const status = document.querySelector(
                        'input[name="status"]:checked',
                    ).value;
                    const payload = {
                        ...currentSelection,
                        status: status,
                        score:
                            status === "Completado"
                                ? Number(
                                      document.getElementById("scoreRange")
                                          .value,
                                  )
                                : 0,
                        favorite: isFavorite, // Guardamos el estado del corazÃ³n
                    };
                    try {
                        await fetch("/api/save.json", {
                            method: "POST",
                            body: JSON.stringify(payload),
                        });
                        closeEditor();
                        alert("âœ… Guardado.");
                        window.location.reload(); // Recargar para actualizar listas
                    } catch (e) {
                        alert("Error");
                    }
                    btn.innerText = "Guardar Cambios";
                    btn.disabled = false;
                });

            // --- GUARDAR ORDEN FAVORITOS ---
            document
                .getElementById("saveOrderBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveOrderBtn");
                    btn.innerText = "Procesando...";

                    // Obtener el nuevo orden del DOM
                    const newOrder = [];
                    document
                        .querySelectorAll("#favList .fav-item")
                        .forEach((el, index) => {
                            const itemData = JSON.parse(el.dataset.full);
                            // Actualizamos su favIndex
                            itemData.favIndex = index + 1;
                            newOrder.push(itemData);
