<html lang="es">
    <head>
        <title>Admin Command Center</title>
        <meta charset="utf-8" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap"
            rel="stylesheet"
        />
        <style>
            :root {
                --bg: #09090b;
                --surface: #18181b;
                --primary: #6366f1;
                --text: #e4e4e7;
                --border: #27272a;
            }
            body {
                background: var(--bg);
                color: var(--text);
                font-family: "Inter", sans-serif;
                margin: 0;
                display: flex;
                height: 100vh;
                overflow: hidden;
            }

            /* Sidebar */
            aside {
                width: 250px;
                background: var(--surface);
                border-right: 1px solid var(--border);
                padding: 2rem;
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }
            h1 {
                font-size: 1.2rem;
                margin: 0 0 2rem 0;
                color: var(--primary);
                letter-spacing: -0.5px;
            }
            .nav-btn {
                background: transparent;
                border: none;
                color: #71717a;
                text-align: left;
                padding: 10px;
                cursor: pointer;
                font-weight: 600;
                border-radius: 6px;
                transition: 0.2s;
            }
            .nav-btn:hover,
            .nav-btn.active {
                background: #27272a;
                color: white;
            }

            /* Main Content */
            main {
                flex: 1;
                padding: 3rem;
                overflow-y: auto;
            }
            .panel {
                display: none;
                max-width: 800px;
                margin: 0 auto;
            }
            .panel.active {
                display: block;
                animation: fadeIn 0.3s ease;
            }

            /* Inputs & Forms */
            .form-group {
                margin-bottom: 1.5rem;
            }
            label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.9rem;
                color: #a1a1aa;
            }
            input,
            select,
            textarea {
                width: 100%;
                padding: 12px;
                background: #000;
                border: 1px solid var(--border);
                color: white;
                border-radius: 8px;
                font-family: inherit;
                box-sizing: border-box;
            }
            input:focus {
                outline: 2px solid var(--primary);
                border-color: transparent;
            }

            /* Search Results */
            .search-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 1rem;
                margin-top: 2rem;
            }
            .result-card {
                display: flex;
                gap: 1rem;
                background: var(--surface);
                padding: 10px;
                border-radius: 8px;
                cursor: pointer;
                border: 1px solid transparent;
                transition: 0.2s;
            }
            .result-card:hover {
                border-color: var(--primary);
                transform: translateY(-2px);
            }
            .result-card img {
                width: 60px;
                height: 85px;
                object-fit: cover;
                border-radius: 4px;
            }

            /* Button */
            .btn-primary {
                background: var(--primary);
                color: white;
                border: none;
                padding: 12px 24px;
                border-radius: 8px;
                font-weight: 600;
                cursor: pointer;
                width: 100%;
                margin-top: 1rem;
            }
            .btn-primary:hover {
                opacity: 0.9;
            }

            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>
    </head>
    <body>
        <aside>
            <h1>COMMAND CENTER</h1>
            <button class="nav-btn active" onclick="switchTab('media')"
                >ðŸŽ® AÃ±adir Contenido</button
            >
            <button class="nav-btn" onclick="switchTab('profile')"
                >ðŸ‘¤ Editar Perfil</button
            >
            <a href="/" class="nav-btn" style="margin-top: auto;"
                >â¬… Ir a la Web</a
            >
        </aside>

        <main>
            <div id="media" class="panel active">
                <h2>Nueva Entrada</h2>
                <div style="display: flex; gap: 10px; margin-bottom: 1rem;">
                    <select id="mediaType" style="width: 150px;">
                        <option value="game">Videojuego</option>
                        <option value="anime">Anime</option>
                    </select>
                    <form id="searchForm" style="flex: 1;">
                        <input
                            type="text"
                            id="searchInput"
                            placeholder="Escribe el nombre y pulsa Enter..."
                            autocomplete="off"
                        />
                    </form>
                </div>

                <div id="searchResults" class="search-grid"></div>

                <div
                    id="editor"
                    style="display:none; background: var(--surface); padding: 20px; border-radius: 12px; border: 1px solid var(--border); margin-top: 20px;"
                >
                    <h3 id="editorTitle">Editando...</h3>
                    <div class="form-group">
                        <label>Estado</label>
                        <select id="statusInput">
                            <option value="Jugando">Jugando / Viendo</option>
                            <option value="Completado">Completado</option>
                            <option value="Pendiente">Pendiente</option>
                            <option value="Abandonado">Abandonado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>PuntuaciÃ³n (0-10)</label>
                        <input
                            type="number"
                            id="scoreInput"
                            max="10"
                            min="0"
                            value="0"
                        />
                    </div>
                    <button class="btn-primary" id="saveMediaBtn"
                        >Guardar y Commitear</button
                    >
                </div>
            </div>

            <div id="profile" class="panel">
                <h2>PersonalizaciÃ³n</h2>
                <div class="form-group">
                    <label>Nombre de Usuario</label>
                    <input
                        type="text"
                        id="usernameInput"
                        placeholder="Ej: ShadowHeart"
                    />
                </div>
                <div class="form-group">
                    <label>BiografÃ­a Corta</label>
                    <textarea
                        id="bioInput"
                        rows="3"
                        placeholder="Gamer, Dev, Otaku..."></textarea>
                </div>
                <div class="form-group">
                    <label>URL del Banner (Pega un enlace de imagen)</label>
                    <input
                        type="url"
                        id="bannerUrlInput"
                        placeholder="https://..."
                    />
                </div>
                <div class="form-group">
                    <label>URL del Avatar (Pega un enlace de imagen)</label>
                    <input
                        type="url"
                        id="avatarUrlInput"
                        placeholder="https://..."
                    />
                </div>
                <button class="btn-primary" id="saveProfileBtn"
                    >Actualizar Perfil</button
                >
            </div>
        </main>

        <script>
            // --- LÃ“GICA DE PESTAÃ‘AS ---
            window.switchTab = (tabId) => {
                document
                    .querySelectorAll(".panel")
                    .forEach((p) => p.classList.remove("active"));
                document
                    .querySelectorAll(".nav-btn")
                    .forEach((b) => b.classList.remove("active"));
                document.getElementById(tabId).classList.add("active");
                event.target.classList.add("active");
            };

            // --- LÃ“GICA DE BÃšSQUEDA ---
            const searchForm = document.getElementById("searchForm");
            const resultsDiv = document.getElementById("searchResults");
            let currentSelection = null;

            searchForm.addEventListener("submit", async (e) => {
                e.preventDefault(); // EVITA RECARGA
                const query = document.getElementById("searchInput").value;
                const type = document.getElementById("mediaType").value;

                resultsDiv.innerHTML =
                    '<p style="color:#666">Buscando en la base de datos...</p>';

                try {
                    const res = await fetch(
                        `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                    );
                    const data = await res.json();

                    if (data.error) throw new Error(data.error);

                    resultsDiv.innerHTML = data
                        .map(
                            (item, index) => `
                <div class="result-card" onclick="selectItem(${index})">
                    <img src="${item.cover}">
                    <div>
                        <div style="font-weight:bold">${item.title}</div>
                        <div style="font-size:0.8rem; color:#888">${item.year}</div>
                    </div>
                </div>
            `,
                        )
                        .join("");

                    // Guardamos los resultados en memoria global temporalmente
                    window.lastResults = data;
                } catch (err) {
                    resultsDiv.innerHTML = `<p style="color:red">Error: ${err.message}</p>`;
                }
            });

            window.selectItem = (index) => {
                currentSelection = window.lastResults[index];
                document.getElementById("editor").style.display = "block";
                document.getElementById("editorTitle").innerText =
                    `AÃ±adiendo: ${currentSelection.title}`;
                document
                    .getElementById("editor")
                    .scrollIntoView({ behavior: "smooth" });
            };

            // --- GUARDAR MEDIA ---
            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    if (!currentSelection) return;

                    const btn = document.getElementById("saveMediaBtn");
                    btn.innerText = "Guardando...";
                    btn.disabled = true;

                    const type =
                        document.getElementById("mediaType").value +
                        (document.getElementById("mediaType").value === "anime"
                            ? ""
                            : "s");

                    const payload = {
                        ...currentSelection,
                        type: type, // 'games' o 'anime'
                        status: document.getElementById("statusInput").value,
                        score: Number(
                            document.getElementById("scoreInput").value,
                        ),
                    };

                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify(payload),
                    });

                    alert("Â¡Guardado! La pÃ¡gina se actualizarÃ¡ en breve.");
                    location.reload();
                });

            // --- GUARDAR PERFIL ---
            document
                .getElementById("saveProfileBtn")
                .addEventListener("click", async () => {
                    const payload = {
                        type: "profile_config",
                        username:
                            document.getElementById("usernameInput").value,
                        bio: document.getElementById("bioInput").value,
                        bannerUrl:
                            document.getElementById("bannerUrlInput").value,
                        avatarUrl:
                            document.getElementById("avatarUrlInput").value,
                    };

                    const btn = document.getElementById("saveProfileBtn");
                    btn.innerText = "Descargando imÃ¡genes y guardando...";

                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify(payload),
                    });
                    alert("Perfil actualizado.");
                    btn.innerText = "Actualizar Perfil";
                });
        </script>
    </body>
</html>
