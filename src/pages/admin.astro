---
// src/pages/admin.astro
---

<html lang="es" class="dark">
    <head>
        <title>Nexus Admin</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <style>
            body {
                background-color: #0f0f12;
                color: #e4e4e7;
            }
            .glass-panel {
                background: rgba(30, 30, 35, 0.5);
                backdrop-filter: blur(12px);
                border: 1px solid rgba(255, 255, 255, 0.05);
            }
            .hide-scroll::-webkit-scrollbar {
                display: none;
            }
            @keyframes slideUp {
                from {
                    opacity: 0;
                    transform: translateY(15px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            .card-enter {
                animation: slideUp 0.4s cubic-bezier(0.2, 0.8, 0.2, 1) backwards;
            }
        </style>
    </head>
    <body
        class="font-sans min-h-screen pb-20 selection:bg-indigo-500/30 selection:text-white"
    >
        <header class="pt-8 pb-4 px-4 text-center max-w-7xl mx-auto">
            <h1 class="text-3xl font-bold text-white tracking-tight mb-6">
                <i class="fa-solid fa-robot text-indigo-500 mr-2"></i> Panel de Control
            </h1>
            <nav class="flex justify-center gap-3 mb-8">
                <button
                    onclick="switchTab('media')"
                    class="tab-btn active px-8 py-2.5 rounded-full text-sm font-bold text-white bg-white/10 hover:bg-white/20 ring-1 ring-white/10 shadow-lg"
                >
                    <i class="fa-solid fa-search mr-2"></i> Buscador
                </button>
                <button
                    onclick="switchTab('profile')"
                    class="tab-btn px-8 py-2.5 rounded-full text-sm font-bold text-gray-400 hover:text-white hover:bg-white/5 border border-white/5"
                >
                    <i class="fa-solid fa-user-pen mr-2"></i> Perfil
                </button>
                <a
                    href="/"
                    class="px-4 py-2.5 rounded-full text-sm font-bold text-red-400 hover:bg-red-500/10 border border-transparent ml-4 transition"
                >
                    <i class="fa-solid fa-right-from-bracket mr-2"></i> Salir
                </a>
            </nav>
        </header>

        <main class="px-4 max-w-7xl mx-auto">
            <div id="media-panel" class="panel">
                <div class="max-w-4xl mx-auto mb-12 sticky top-4 z-20">
                    <form
                        id="searchForm"
                        class="glass-panel p-2 rounded-2xl flex gap-2 shadow-2xl relative z-10 bg-[#0f0f12]/90"
                    >
                        <select
                            id="mediaType"
                            class="bg-transparent text-white font-bold px-4 pr-8 py-3 rounded-xl cursor-pointer outline-none hover:bg-white/5 transition appearance-none"
                        >
                            <option value="game" class="bg-[#1a1a1e]"
                                >ðŸŽ® Juegos</option
                            >
                            <option value="anime" class="bg-[#1a1a1e]"
                                >ðŸ“º Anime</option
                            >
                            <option value="manga" class="bg-[#1a1a1e]"
                                >ðŸ“– Manga</option
                            >
                        </select>

                        <input
                            type="text"
                            id="searchInput"
                            placeholder="Buscar tÃ­tulo (Elden Ring, One Piece...)"
                            autocomplete="off"
                            class="flex-1 bg-transparent text-white text-lg placeholder-gray-500 px-4 py-3 outline-none border-l border-white/10"
                        />

                        <button
                            type="submit"
                            class="bg-indigo-600 hover:bg-indigo-500 text-white px-8 rounded-xl transition-transform active:scale-95 font-bold"
                        >
                            Buscar
                        </button>
                    </form>
                </div>

                <div
                    id="searchResults"
                    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-5 md:gap-7 pb-20"
                >
                    <div
                        class="col-span-full flex flex-col items-center justify-center py-32 text-gray-700 opacity-50 select-none"
                    >
                        <i class="fa-solid fa-magnifying-glass text-6xl mb-4"
                        ></i>
                        <p class="text-lg font-medium">
                            Resultados aparecerÃ¡n aquÃ­
                        </p>
                    </div>
                </div>
            </div>

            <div id="profile-panel" class="panel hidden max-w-2xl mx-auto">
                <div class="glass-panel p-8 rounded-3xl space-y-8 shadow-xl">
                    <div>
                        <h2 class="text-2xl font-bold text-white mb-6">
                            PersonalizaciÃ³n
                        </h2>
                        <div class="space-y-4">
                            <input
                                type="text"
                                id="usernameInput"
                                placeholder="Nombre de usuario"
                                class="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white outline-none focus:border-indigo-500 transition"
                            />
                            <textarea
                                id="bioInput"
                                rows="3"
                                placeholder="BiografÃ­a corta"
                                class="w-full bg-white/5 border border-white/10 rounded-xl p-4 text-white outline-none focus:border-indigo-500 transition resize-none"
                            ></textarea>
                        </div>
                    </div>
                    <div
                        class="bg-indigo-500/10 border border-indigo-500/20 rounded-xl p-4 flex gap-4 items-center"
                    >
                        <i
                            class="fa-solid fa-info-circle text-indigo-400 text-2xl ml-2"
                        ></i>
                        <p class="text-sm text-indigo-200">
                            Reemplaza <b>pic.png</b> y <b>banner.png</b> en <code
                                >public/img/profile</code
                            > para cambiar las imÃ¡genes.
                        </p>
                    </div>
                    <button
                        id="saveProfileBtn"
                        class="w-full bg-white text-black font-bold py-4 rounded-xl hover:bg-gray-200 transition"
                        >Guardar Cambios</button
                    >
                </div>
            </div>
        </main>

        <div
            id="editor"
            class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/95 backdrop-blur-sm"
        >
            <div
                class="bg-[#18181b] border border-white/10 w-full max-w-3xl rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row max-h-[90vh]"
            >
                <div
                    class="w-full md:w-2/5 bg-black relative h-56 md:h-auto group shrink-0"
                >
                    <img
                        id="editorCover"
                        src=""
                        class="absolute inset-0 w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-all duration-700"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[#18181b] to-transparent md:bg-gradient-to-r"
                    >
                    </div>
                </div>
                <div class="flex-1 p-8 flex flex-col overflow-y-auto">
                    <div class="flex justify-between items-start mb-6">
                        <div>
                            <h2
                                id="editorTitle"
                                class="text-2xl font-bold text-white leading-tight line-clamp-2"
                            >
                                TÃ­tulo
                            </h2>
                            <p
                                id="editorYear"
                                class="text-gray-500 text-sm mt-1 font-bold"
                            >
                                202X
                            </p>
                        </div>
                        <button
                            onclick="closeEditor()"
                            class="w-8 h-8 rounded-full bg-white/10 hover:bg-white/20 text-white flex items-center justify-center"
                            ><i class="fa-solid fa-xmark"></i></button
                        >
                    </div>

                    <div class="space-y-6 flex-1">
                        <div>
                            <label
                                class="text-xs font-bold text-gray-500 uppercase mb-3 block"
                                >Estado</label
                            >
                            <div class="grid grid-cols-2 gap-3">
                                <label class="cursor-pointer"
                                    ><input
                                        type="radio"
                                        name="status"
                                        value="Jugando"
                                        class="peer hidden"
                                        checked
                                    /><div
                                        class="peer-checked:bg-indigo-600 peer-checked:text-white border border-white/10 bg-[#202025] text-gray-400 rounded-xl py-3 text-center transition font-bold text-sm hover:bg-white/5"
                                    >
                                        <i class="fa-solid fa-play mr-1"></i> Jugando
                                    </div></label
                                >
                                <label class="cursor-pointer"
                                    ><input
                                        type="radio"
                                        name="status"
                                        value="Completado"
                                        class="peer hidden"
                                    /><div
                                        class="peer-checked:bg-emerald-600 peer-checked:text-white border border-white/10 bg-[#202025] text-gray-400 rounded-xl py-3 text-center transition font-bold text-sm hover:bg-white/5"
                                    >
                                        <i class="fa-solid fa-check mr-1"></i> Terminado
                                    </div></label
                                >
                                <label class="cursor-pointer"
                                    ><input
                                        type="radio"
                                        name="status"
                                        value="Pendiente"
                                        class="peer hidden"
                                    /><div
                                        class="peer-checked:bg-amber-600 peer-checked:text-white border border-white/10 bg-[#202025] text-gray-400 rounded-xl py-3 text-center transition font-bold text-sm hover:bg-white/5"
                                    >
                                        <i class="fa-regular fa-clock mr-1"></i> Pendiente
                                    </div></label
                                >
                                <label class="cursor-pointer"
                                    ><input
                                        type="radio"
                                        name="status"
                                        value="Abandonado"
                                        class="peer hidden"
                                    /><div
                                        class="peer-checked:bg-rose-600 peer-checked:text-white border border-white/10 bg-[#202025] text-gray-400 rounded-xl py-3 text-center transition font-bold text-sm hover:bg-white/5"
                                    >
                                        <i class="fa-solid fa-ban mr-1"></i> Dropped
                                    </div></label
                                >
                            </div>
                        </div>
                        <div class="bg-white/5 p-4 rounded-xl">
                            <div class="flex justify-between mb-2">
                                <label
                                    class="text-xs font-bold text-gray-500 uppercase"
                                    >Nota</label
                                >
                                <span
                                    id="scoreValue"
                                    class="text-white font-black text-lg bg-indigo-600 px-2 rounded"
                                    >5</span
                                >
                            </div>
                            <input
                                type="range"
                                id="scoreRange"
                                min="0"
                                max="10"
                                step="1"
                                value="5"
                                class="w-full h-2 bg-black/50 rounded-lg appearance-none cursor-pointer accent-indigo-500"
                            />
                        </div>
                    </div>
                    <div class="mt-8">
                        <button
                            id="saveMediaBtn"
                            class="w-full bg-white text-black h-12 rounded-xl font-bold hover:bg-gray-200 transition shadow-lg flex items-center justify-center gap-2"
                        >
                            <i class="fa-solid fa-cloud-arrow-up"></i> Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script is:inline>
            let currentSelection = null;
            let lastResults = [];

            window.switchTab = (id) => {
                document
                    .querySelectorAll(".panel")
                    .forEach((p) => p.classList.add("hidden"));
                document.querySelectorAll(".tab-btn").forEach((b) => {
                    b.className =
                        "tab-btn px-8 py-2.5 rounded-full text-sm font-bold transition-all duration-300 flex items-center gap-2 text-gray-400 hover:text-white hover:bg-white/5 border border-white/5";
                });
                document
                    .getElementById(`${id}-panel`)
                    .classList.remove("hidden");
                const btn = document.querySelector(
                    `button[onclick="switchTab('${id}')"]`,
                );
                btn.className =
                    "tab-btn active px-8 py-2.5 rounded-full text-sm font-bold transition-all duration-300 flex items-center gap-2 text-white bg-white/10 hover:bg-white/20 ring-1 ring-white/10 shadow-lg";
            };

            document
                .getElementById("searchForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const query = document.getElementById("searchInput").value;
                    const type = document.getElementById("mediaType").value;
                    const container = document.getElementById("searchResults");

                    if (!query) return;

                    container.innerHTML = `<div class="col-span-full flex flex-col items-center justify-center py-32 animate-pulse"><i class="fa-solid fa-circle-notch fa-spin text-5xl text-indigo-500 mb-4"></i><p class="text-gray-400 font-bold">Buscando...</p></div>`;

                    try {
                        const res = await fetch(
                            `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                        );
                        const data = await res.json();
                        if (data.error) throw new Error(data.error);
                        if (!data.length) throw new Error("Sin resultados.");

                        lastResults = data;
                        container.innerHTML = data
                            .map(
                                (item, idx) => `
                    <div onclick="openEditor(${idx})" class="card-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#18181b] shadow-lg ring-1 ring-white/5 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-indigo-500/30 hover:ring-indigo-500/50" style="animation-delay: ${idx * 30}ms">
                        <img src="${item.cover}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                        <div class="absolute top-2 right-2 bg-black/60 backdrop-blur-md px-2 py-1 rounded-md text-xs font-bold text-white border border-white/10">
                            <i class="fa-solid fa-star text-yellow-500 text-[10px]"></i> ${item.score}
                        </div>
                        <div class="absolute bottom-0 p-4 w-full translate-y-2 group-hover:translate-y-0 transition-transform">
                            <h3 class="text-white font-bold text-sm leading-tight line-clamp-2 group-hover:text-indigo-300 transition-colors">${item.title}</h3>
                            <p class="text-[10px] uppercase font-bold text-gray-500 mt-1 tracking-wider">${item.year}</p>
                        </div>
                    </div>
                `,
                            )
                            .join("");
                    } catch (err) {
                        container.innerHTML = `<div class="col-span-full text-center py-20 text-red-400 font-bold">${err.message}</div>`;
                    }
                });

            window.openEditor = (idx) => {
                currentSelection = lastResults[idx];
                document.getElementById("editor").classList.remove("hidden");
                document.getElementById("editorTitle").innerText =
                    currentSelection.title;
                document.getElementById("editorYear").innerText =
                    currentSelection.year;
                document.getElementById("editorCover").src =
                    currentSelection.cover;
                document.getElementById("scoreRange").value =
                    currentSelection.score || 5;
                document.getElementById("scoreValue").innerText =
                    currentSelection.score || 5;
                document.querySelector(
                    'input[name="status"][value="Jugando"]',
                ).checked = true;
            };

            window.closeEditor = () =>
                document.getElementById("editor").classList.add("hidden");
            document
                .getElementById("scoreRange")
                .addEventListener(
                    "input",
                    (e) =>
                        (document.getElementById("scoreValue").innerText =
                            e.target.value),
                );

            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveMediaBtn");
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = `<i class="fa-solid fa-circle-notch fa-spin"></i> Guardando...`;
                    btn.disabled = true;

                    const status = document.querySelector(
                        'input[name="status"]:checked',
                    ).value;
                    const type = document.getElementById("mediaType").value;
                    const folder =
                        type === "game"
                            ? "games"
                            : type === "manga"
                              ? "manga"
                              : "anime";

                    const payload = {
                        ...currentSelection,
                        type: folder,
                        status: status,
                        score: Number(
                            document.getElementById("scoreRange").value,
                        ),
                    };
                    try {
                        await fetch("/api/save.json", {
                            method: "POST",
                            body: JSON.stringify(payload),
                        });
                        closeEditor();
                    } catch (e) {
                        alert("Error");
                    }
                    btn.innerHTML = originalHTML;
                    btn.disabled = false;
                });

            document
                .getElementById("saveProfileBtn")
                .addEventListener("click", async () => {
                    const payload = {
                        type: "profile_config",
                        username:
                            document.getElementById("usernameInput").value,
                        bio: document.getElementById("bioInput").value,
                    };
                    const btn = document.getElementById("saveProfileBtn");
                    btn.innerText = "Guardando...";
                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify(payload),
                    });
                    btn.innerText = "Guardado";
                    setTimeout(() => (btn.innerText = "Guardar Cambios"), 1500);
                });
        </script>
    </body>
</html>
