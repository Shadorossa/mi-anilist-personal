    <script is:inline>
        let currentSelection = null;
        let lastSearchResults = [];
        let isFavorite = false;
        
        document.getElementById('tagYear').value = new Date().getFullYear();
        document.getElementById('charTagYear').value = new Date().getFullYear();

        // --- SISTEMA DE MODOS ---
        window.switchMode = (mode) => {
            document.querySelectorAll('.panel').forEach(p => p.classList.add('hidden'));
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active', 'text-white', 'bg-white/10'));
            
            document.getElementById(`${mode}-panel`).classList.remove('hidden');
            const btn = document.querySelector(`button[onclick="switchMode('${mode}')"]`);
            if(btn) btn.classList.add('active', 'text-white', 'bg-white/10');

            if(mode === 'library') renderLocalLibrary();
            if(mode === 'favorites') renderFavoritesSortable();
            if(mode === 'characters') renderCharacterPanel();
        }
        switchMode('search'); 

        // --- RENDER GRID ---
        function renderCard(item, onclickFunc, isChar = false) {
            const isFav = window.favoritesTitles.includes(item.title);
            return `
            <div onclick='${onclickFunc}(${JSON.stringify(item).replace(/'/g, "&#39;")})' class="group relative aspect-[2/3] rounded-lg overflow-hidden cursor-pointer bg-[#18181b] ring-1 ring-white/5 hover:ring-white/20 hover:scale-[1.03] transition-all duration-300 shadow-lg">
                <img src="${item.cover}" class="w-full h-full object-cover opacity-70 group-hover:opacity-100 transition-opacity ${isChar ? 'object-top' : ''}">
                ${!isChar && isFav ? '<div class="absolute top-1.5 left-1.5 text-red-500 drop-shadow-md text-[10px]"><i class="fa-solid fa-heart"></i></div>' : ''}
                <div class="absolute bottom-0 inset-x-0 p-2 bg-gradient-to-t from-black via-black/80 to-transparent"><p class="text-[9px] font-bold text-white truncate leading-tight">${item.title}</p></div>
            </div>`;
        }

        function renderLocalLibrary(filterText = '') {
            const filtered = window.localLibrary.filter(item => item.title.toLowerCase().includes(filterText.toLowerCase()));
            document.getElementById('localGrid').innerHTML = filtered.map(item => renderCard(item, 'openEditorLocal')).join('');
        }
        document.getElementById('localFilter').addEventListener('input', (e) => renderLocalLibrary(e.target.value));

        // --- BUSCADORES ---
        document.getElementById('searchForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const query = document.getElementById('searchInput').value;
            const type = document.getElementById('mediaType').value;
            if(!query) return;
            document.getElementById('searchResults').innerHTML = `<div class="col-span-full py-10 text-center text-gray-500 text-xs">Buscando...</div>`;
            try {
                const res = await fetch(`/api/search.json?q=${encodeURIComponent(query)}&type=${type}`);
                const data = await res.json();
                window.lastSearchResults = data;
                document.getElementById('searchResults').innerHTML = data.map((item, idx) => renderCard(item, 'openEditorSearch')).join('');
            } catch (e) { document.getElementById('searchResults').innerHTML = `<p class="col-span-full text-center text-red-400 text-xs">Error</p>`; }
        });

        document.getElementById('charSearchForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const query = document.getElementById('charInput').value;
            if(!query) return;
            document.getElementById('charResults').innerHTML = `<div class="col-span-full py-10 text-center text-gray-500 text-xs">Buscando...</div>`;
            try {
                const res = await fetch(`/api/search.json?q=${encodeURIComponent(query)}&type=character`);
                const data = await res.json();
                document.getElementById('charResults').innerHTML = data.map(item => renderCard(item, 'openCharEditor', true)).join('');
            } catch (e) { document.getElementById('charResults').innerHTML = "Error"; }
        });

        function renderCharacterPanel() {
            document.getElementById('savedCharsGrid').innerHTML = window.charactersGlobal.map(item => renderCard(item, 'openCharEditor', true)).join('');
        }

        // --- EDITOR OBRAS ---
        window.openEditorSearch = (idx) => {
            const item = window.lastSearchResults[idx];
            if(!item.id) item.id = Date.now();
            const type = document.getElementById('mediaType').value;
            fillEditor({ ...item, type: type === 'game' ? 'games' : (type === 'manga' ? 'manga' : 'anime') });
        };
        window.openEditorLocal = (item) => fillEditor(item);

        function fillEditor(data) {
            currentSelection = data;
            document.getElementById('editor').classList.remove('hidden');
            document.getElementById('editorTitle').innerText = data.title;
            document.getElementById('editorYear').innerText = data.year || '----';
            document.getElementById('editorCover').src = data.cover;
            
            const statusToSelect = data.status || 'Jugando';
            document.querySelectorAll('input[name="status"]').forEach(r => { r.checked = (r.value === statusToSelect); });
            updateStarsVisual(data.score || 0);
            isFavorite = window.favoritesTitles.includes(data.title);
            updateFavBtn();
            renderMonthTags();
            checkScoreLock();
        }
        window.closeEditor = () => document.getElementById('editor').classList.add('hidden');

        // --- EDITOR PERSONAJES ---
        let currentCharSelection = null;
        window.openCharEditor = (item) => {
            currentCharSelection = item;
            document.getElementById('charEditor').classList.remove('hidden');
            document.getElementById('charCover').src = item.cover || item.img;
            const name = item.title || item.name;
            document.getElementById('charNameDisplay').innerText = name;
            document.getElementById('charNameInput').value = name;
            document.getElementById('charSourceInput').value = item.source || '';
            const exists = window.charactersGlobal.some(c => c.title === name);
            document.getElementById('deleteCharBtn').style.display = exists ? 'flex' : 'none';
            renderCharMonthTags();
        };
        window.closeCharEditor = () => document.getElementById('charEditor').classList.add('hidden');

        // --- TAGS MENSUALES OBRAS ---
        window.addMonthTag = () => {
            const m = document.getElementById('tagMonth').value; const y = document.getElementById('tagYear').value;
            if(!m || !y) return;
            const dateStr = `${y}-${m}`;
            const exists = window.monthlyPicksGlobal.some(entry => entry.month === dateStr && entry.title === currentSelection.title);
            if(!exists) {
                window.monthlyPicksGlobal.push({ month: dateStr, title: currentSelection.title, cover: currentSelection.cover });
                window.monthlyPicksGlobal.sort((a,b) => b.month.localeCompare(a.month)); 
                renderMonthTags();
            }
        };
        window.removeMonthTag = (dateStr) => {
            window.monthlyPicksGlobal = window.monthlyPicksGlobal.filter(entry => !(entry.month === dateStr && entry.title === currentSelection.title));
            renderMonthTags();
        };
        function renderMonthTags() {
            const container = document.getElementById('monthlyTagsContainer');
            const tags = window.monthlyPicksGlobal.filter(entry => entry.title === currentSelection.title);
            if(tags.length === 0) { container.innerHTML = '<span class="text-[10px] text-gray-700 italic pl-1">Sin historial</span>'; return; }
            container.innerHTML = tags.map(tag => {
                const [y, m] = tag.month.split('-');
                return `<div class="tag-pill">${m}/${y.slice(2)} <button onclick="removeMonthTag('${tag.month}')"><i class="fa-solid fa-xmark text-[9px]"></i></button></div>`;
            }).join('');
        }

        // --- TAGS MENSUALES PERSONAJES ---
        window.addCharMonthTag = () => {
            const m = document.getElementById('charTagMonth').value; const y = document.getElementById('charTagYear').value;
            const name = document.getElementById('charNameInput').value;
            if(!m || !y || !name) return;
            const dateStr = `${y}-${m}`;
            const exists = window.monthlyCharsGlobal.some(entry => entry.month === dateStr && entry.name === name);
            if(!exists) {
                window.monthlyCharsGlobal.push({ month: dateStr, name: name, cover: document.getElementById('charCover').src });
                window.monthlyCharsGlobal.sort((a,b) => b.month.localeCompare(a.month));
                renderCharMonthTags();
            }
        };
        window.removeCharMonthTag = (dateStr) => {
            const name = document.getElementById('charNameInput').value;
            window.monthlyCharsGlobal = window.monthlyCharsGlobal.filter(entry => !(entry.month === dateStr && entry.name === name));
            renderCharMonthTags();
        };
        function renderCharMonthTags() {
            const container = document.getElementById('charTagsContainer');
            const name = document.getElementById('charNameInput').value;
            const tags = window.monthlyCharsGlobal.filter(entry => entry.name === name);
            if(tags.length === 0) { container.innerHTML = '<span class="text-[9px] text-gray-600 italic">Sin historial</span>'; return; }
            container.innerHTML = tags.map(tag => {
                const [y, m] = tag.month.split('-');
                return `<div class="tag-pill">${m}/${y.slice(2)} <button onclick="removeCharMonthTag('${tag.month}')"><i class="fa-solid fa-xmark text-[9px]"></i></button></div>`;
            }).join('');
        }

        // --- GUARDADO ---
        window.saveCharacter = async () => {
            const name = document.getElementById('charNameInput').value;
            const source = document.getElementById('charSourceInput').value;
            const cover = document.getElementById('charCover').src;
            const index = window.charactersGlobal.findIndex(c => c.title === (currentCharSelection.title || currentCharSelection.name));
            const newChar = { title: name, cover: cover, source: source };
            if(index >= 0) window.charactersGlobal[index] = newChar; else window.charactersGlobal.push(newChar);

            await fetch('/api/save.json', { method: 'POST', body: JSON.stringify({ type: 'update_db', characters: window.charactersGlobal, monthlyChars: window.monthlyCharsGlobal }) });
            closeCharEditor();
            renderCharacterPanel();
        };

        document.getElementById('deleteCharBtn').addEventListener('click', async () => {
            if(!confirm("¿Borrar?")) return;
            window.charactersGlobal = window.charactersGlobal.filter(c => c.title !== (currentCharSelection.title || currentCharSelection.name));
            await fetch('/api/save.json', { method: 'POST', body: JSON.stringify({ type: 'update_db', characters: window.charactersGlobal, monthlyChars: window.monthlyCharsGlobal }) });
            closeCharEditor();
            renderCharacterPanel();
        });

        document.getElementById('saveMediaBtn').addEventListener('click', async () => {
            const btn = document.getElementById('saveMediaBtn');
            btn.innerHTML = `<i class="fa-solid fa-circle-notch fa-spin"></i>`; btn.disabled = true;
            const status = document.querySelector('input[name="status"]:checked').value;
            const finalScore = status === 'Completado' ? Number(document.getElementById('scoreRange').value) : 0;
            if (isFavorite && !window.favoritesTitles.includes(currentSelection.title)) window.favoritesTitles.push(currentSelection.title);
            else if (!isFavorite) window.favoritesTitles = window.favoritesTitles.filter(t => t !== currentSelection.title);

            const payloadFile = { ...currentSelection, status, score: finalScore };
            const payloadDB = { type: 'update_db', favorites: window.favoritesTitles, monthlyPicks: window.monthlyPicksGlobal };
            await Promise.all([ fetch('/api/save.json', { method: 'POST', body: JSON.stringify(payloadFile) }), fetch('/api/save.json', { method: 'POST', body: JSON.stringify(payloadDB) }) ]);
            closeEditor();
            btn.innerText = "Guardar Cambios"; btn.disabled = false;
        });

        // --- HELPERS ---
        function updateStarsVisual(value) {
            document.getElementById('scoreRange').value = value;
            const visualScore = value / 2;
            document.getElementById('scoreText').innerText = visualScore;
            let html = '';
            for (let i = 1; i <= 5; i++) {
                let iconClass = "fa-regular fa-star text-[#333]"; 
                let colorClass = "text-[#333]";
                if (visualScore >= i) { iconClass = "fa-solid fa-star"; colorClass = "text-white"; } 
                else if (visualScore >= i - 0.5) { iconClass = "fa-solid fa-star-half-stroke"; colorClass = "text-white"; }
                html += `<span class="relative inline-block px-0.5 group/star"><i class="${iconClass} ${colorClass} group-hover/star:text-white"></i><div class="absolute left-0 top-0 bottom-0 w-1/2 z-10" onclick="setScore(${i * 2 - 1})"></div><div class="absolute right-0 top-0 bottom-0 w-1/2 z-10" onclick="setScore(${i * 2})"></div></span>`;
            }
            document.getElementById('starsVisual').innerHTML = html;
        }
        window.setScore = (val) => { if(!document.getElementById('scoreRange').disabled) updateStarsVisual(val); };

        window.checkScoreLock = () => {
            const status = document.querySelector('input[name="status"]:checked').value;
            const range = document.getElementById('scoreRange');
            const container = document.getElementById('scoreContainer');
            if (status === 'Completado') { range.disabled = false; container.style.opacity = '1'; container.style.pointerEvents = 'auto'; } 
            else { range.disabled = true; container.style.opacity = '0.3'; container.style.pointerEvents = 'none'; updateStarsVisual(0); }
        };

        window.toggleFav = () => { isFavorite = !isFavorite; updateFavBtn(); }
        function updateFavBtn() {
            const btn = document.getElementById('favBtn');
            if(isFavorite) { btn.innerHTML = `<i class="fa-solid fa-heart text-red-500 drop-shadow-[0_0_10px_rgba(239,68,68,0.6)]"></i>`; btn.classList.add('scale-110'); } 
            else { btn.innerHTML = `<i class="fa-regular fa-heart"></i>`; btn.classList.remove('scale-110'); }
        }

        function renderFavoritesSortable() {
            const container = document.getElementById('favList');
            const favObjects = window.favoritesTitles.map(title => window.localLibrary.find(item => item.title === title)).filter(Boolean);
            container.innerHTML = favObjects.map(item => renderCard(item, '')).join('');
            new Sortable(container, { animation: 150 });
        }
        document.getElementById('saveOrderBtn').addEventListener('click', async () => {
            const btn = document.getElementById('saveOrderBtn'); btn.innerText = "...";
            const newOrderTitles = [];
            document.querySelectorAll('#favList .group p').forEach(el => newOrderTitles.push(el.innerText));
            window.favoritesTitles = newOrderTitles;
            await fetch('/api/save.json', { method: 'POST', body: JSON.stringify({ type: 'update_db', favorites: newOrderTitles }) });
            btn.innerText = "Hecho"; setTimeout(() => btn.innerText = "Guardar Orden", 1500);
        });
    </script>
</body>
