                openCharEditor(currentSelection);
            };

            window.addSagaToHof = (sagaName) => {
                currentSagaForHof = sagaName;
                const sagaGames = window.sagas[sagaName] || [];
                const gameObjects = sagaGames
                    .map((title) =>
                        window.localLibrary.find(
                            (item) => item.title === title,
                        ),
                    )
                    .filter(Boolean);

                const grid = document.getElementById("sagaCoverPickerGrid");
                document.getElementById("sagaCoverPickerTitle").innerText =
                    `Seleccionar Portada para "${sagaName}"`;

                grid.innerHTML = gameObjects
                    .map(
                        (game) => `
                    <div class="asearch-card !rounded-lg" onclick="selectSagaCover('${game.cover}')">
                        <img src="${game.cover}" class="obj-center"><div class="asearch-info !opacity-100 !bg-black/50"><h4 class="asearch-title !text-[9px]">${game.title}</h4></div></div>`,
                    )
                    .join("");

                document
                    .getElementById("sagaCoverPickerModal")
                    .classList.remove("hidden");
