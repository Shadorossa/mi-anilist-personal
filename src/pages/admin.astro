        <script is:inline>
            let currentSelection = null;
            let lastResults = [];

            // --- SISTEMA DE PESTA√ëAS ---
            window.switchTab = (id) => {
                document
                    .querySelectorAll(".panel")
                    .forEach((p) => p.classList.add("hidden"));
                // Reset botones nav
                document.querySelectorAll(".nav-btn").forEach((b) => {
                    b.classList.remove("active", "text-white");
                    b.classList.add("text-gray-400");
                });

                document.getElementById(id).classList.remove("hidden");

                // Activar bot√≥n actual
                const btn = document.querySelector(
                    `button[onclick="switchTab('${id}')"]`,
                );
                btn.classList.add("active", "text-white");
                btn.classList.remove("text-gray-400");
            };

            // --- B√öSQUEDA ---
            document
                .getElementById("searchForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const query = document.getElementById("searchInput").value;
                    const type = document.getElementById("mediaType").value;
                    const container = document.getElementById("searchResults");

                    if (!query) return;

                    // Loading State Limpio
                    container.innerHTML = `
                <div class="col-span-full flex flex-col items-center justify-center py-32 animate-pulse">
                    <i class="fa-solid fa-circle-notch fa-spin text-4xl text-indigo-500 mb-4"></i>
                    <p class="text-gray-500 font-medium">Consultando base de datos...</p>
                </div>`;

                    try {
                        // NOTA: Para obtener M√ÅS resultados, deber√≠as editar api/search.json.ts y cambiar "limit 6" por "limit 20"
                        const res = await fetch(
                            `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                        );
                        const data = await res.json();

                        if (data.error) throw new Error(data.error);
                        if (!data.length)
                            throw new Error("No se encontraron resultados");

                        lastResults = data;

                        // Renderizado de Resultados (Grid Responsive)
                        container.innerHTML = data
                            .map(
                                (item, idx) => `
                    <div onclick="openEditor(${idx})" class="animate-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#121215] shadow-lg ring-1 ring-white/5 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-indigo-500/20 hover:ring-indigo-500/40" style="animation-delay: ${idx * 50}ms">
                        <img src="${item.cover}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" loading="lazy">
                        
                        <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                        
                        <div class="absolute top-2 right-2 bg-black/60 backdrop-blur-md px-2.5 py-1 rounded-lg text-xs font-bold text-white flex items-center gap-1 border border-white/10 shadow-lg">
                            <i class="fa-solid fa-star text-yellow-500 text-[10px]"></i> ${item.score}
                        </div>

                        <div class="absolute bottom-0 p-4 w-full translate-y-2 group-hover:translate-y-0 transition-transform">
                            <h3 class="text-white font-bold text-sm leading-tight line-clamp-2 drop-shadow-md group-hover:text-indigo-300 transition-colors">${item.title}</h3>
                            <p class="text-[10px] uppercase font-bold text-gray-500 mt-1 tracking-wider">${item.year}</p>
                        </div>
                    </div>
                `,
                            )
                            .join("");
                    } catch (err) {
                        container.innerHTML = `
                    <div class="col-span-full flex flex-col items-center justify-center py-20 text-red-400">
                        <i class="fa-solid fa-triangle-exclamation text-4xl mb-3"></i>
                        <p class="font-medium">${err.message}</p>
                    </div>`;
                    }
                });

            // --- EDITOR MODAL ---
            window.openEditor = (idx) => {
                currentSelection = lastResults[idx];
                document.getElementById("editor").classList.remove("hidden");

                document.getElementById("editorTitle").innerText =
                    currentSelection.title;
                document.getElementById("editorYear").innerText =
                    currentSelection.year || "N/A";
                document.getElementById("editorCover").src =
                    currentSelection.cover;

                // Reset
                document.getElementById("scoreRange").value =
                    currentSelection.score || 5;
                document.getElementById("scoreValue").innerText =
                    (currentSelection.score || 5) + "/10";
                document.querySelector(
                    'input[name="status"][value="Jugando"]',
                ).checked = true;
            };

            window.closeEditor = () =>
                document.getElementById("editor").classList.add("hidden");

            document
                .getElementById("scoreRange")
                .addEventListener("input", (e) => {
                    document.getElementById("scoreValue").innerHTML =
                        `${e.target.value}<span class="text-sm text-gray-500">/10</span>`;
                });

            // --- GUARDADO ---
            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveMediaBtn");
                    const originalHTML = btn.innerHTML;
                    btn.innerHTML = `<i class="fa-solid fa-circle-notch fa-spin"></i> <span>Guardando...</span>`;
                    btn.disabled = true;

                    const status = document.querySelector(
                        'input[name="status"]:checked',
                    ).value;
                    const type = document.getElementById("mediaType").value;
                    const folder =
                        type === "game"
                            ? "games"
                            : type === "manga"
                              ? "manga"
                              : "anime";

                    const payload = {
                        ...currentSelection,
                        type: folder,
                        status: status,
                        score: Number(
                            document.getElementById("scoreRange").value,
                        ),
                    };

                    try {
                        await fetch("/api/save.json", {
                            method: "POST",
                            body: JSON.stringify(payload),
                        });
                        closeEditor();
                        // Feedback sutil en vez de alert
                        const searchBtn = document.querySelector(
                            'button[type="submit"]',
                        );
                        const oldColor = searchBtn.className;
                        searchBtn.className =
                            "h-14 px-8 bg-green-600 text-white rounded-xl font-bold flex items-center gap-2";
                        searchBtn.innerHTML = `<i class="fa-solid fa-check"></i> <span>Guardado</span>`;
                        setTimeout(() => {
                            searchBtn.className = oldColor;
                            searchBtn.innerHTML = `<span>Buscar</span> <i class="fa-solid fa-arrow-right"></i>`;
                        }, 2000);
                    } catch (e) {
                        alert("Error al guardar. Revisa la consola.");
                    }
                    btn.innerHTML = originalHTML;
                    btn.disabled = false;
                });

            document
                .getElementById("saveProfileBtn")
                .addEventListener("click", async () => {
                    const payload = {
                        type: "profile_config",
                        username:
                            document.getElementById("usernameInput").value,
                        bio: document.getElementById("bioInput").value,
                    };
                    const btn = document.getElementById("saveProfileBtn");
                    btn.innerText = "Guardando...";
                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify(payload),
                    });
                    btn.innerText = "¬°Guardado!";
                    setTimeout(() => (btn.innerText = "Guardar Cambios"), 2000);
                });
        </script>
