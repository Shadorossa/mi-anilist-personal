                document
                    .querySelector(`button[onclick="switchMode('${mode}')"]`)
                    .classList.add(
                        "active",
                        "text-white",
                        "bg-white/10",
                        "ring-1",
                    );
                if (mode === "library") renderLocalLibrary();
                if (mode === "favorites") renderFavoritesSortable();
            };

            // --- RENDER BIBLIOTECA LOCAL ---
            function renderLocalLibrary(filterText = "") {
                const container = document.getElementById("localGrid");
                const filtered = window.localLibrary.filter((item) =>
                    item.title.toLowerCase().includes(filterText.toLowerCase()),
                );
                container.innerHTML = filtered
                    .map((item) => {
                        const isFav = window.favoritesTitles.includes(
                            item.title,
                        );
                        return `
                <div onclick='openEditorLocal(${JSON.stringify(item).replace(/'/g, "&#39;")})' class="card-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#18181b] ring-1 ring-white/5 hover:ring-indigo-500/50 hover:shadow-xl transition-all hover:-translate-y-1">
                    <img src="${item.cover}" class="w-full h-full object-cover opacity-60 group-hover:opacity-100 transition-opacity">
                    ${isFav ? '<div class="absolute top-2 left-2 text-yellow-500 drop-shadow-md text-lg"><i class="fa-solid fa-heart"></i></div>' : ""}
                    <div class="absolute bottom-0 inset-x-0 p-3 bg-gradient-to-t from-black/90 to-transparent"><p class="text-xs font-bold text-white truncate">${item.title}</p></div>
                </div>`;
                    })
                    .join("");
            }
            document
                .getElementById("localFilter")
                .addEventListener("input", (e) =>
                    renderLocalLibrary(e.target.value),
                );

            // --- BUSCADOR API ---
            document
                .getElementById("searchForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const query = document.getElementById("searchInput").value;
                    const type = document.getElementById("mediaType").value;
                    const container = document.getElementById("searchResults");
                    container.innerHTML = `<div class="col-span-full py-20 text-center"><i class="fa-solid fa-circle-notch fa-spin text-3xl text-indigo-500"></i></div>`;
                    try {
                        const res = await fetch(
                            `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                        );
                        const data = await res.json();
                        lastSearchResults = data;
                        container.innerHTML = data
                            .map(
                                (item, idx) => `
                    <div onclick="openEditorSearch(${idx})" class="card-enter group relative aspect-[2/3] rounded-xl overflow-hidden cursor-pointer bg-[#18181b] shadow-lg ring-1 ring-white/5 hover:-translate-y-2 transition-all">
                        <img src="${item.cover}" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity">
                        <div class="absolute bottom-0 p-3 w-full bg-gradient-to-t from-black/90 to-transparent"><h3 class="text-white font-bold text-xs truncate">${item.title}</h3></div>
                    </div>
                `,
                            )
                            .join("");
                    } catch (e) {
                        container.innerHTML = `<p class="col-span-full text-center text-red-400">Error</p>`;
                    }
                });

            // --- EDITOR ---
            window.openEditorSearch = (idx) => {
                const item = lastSearchResults[idx];
                const type = document.getElementById("mediaType").value;
                fillEditor({
                    ...item,
                    type:
                        type === "game"
                            ? "games"
                            : type === "manga"
                              ? "manga"
                              : "anime",
                });
            };
            window.openEditorLocal = (item) => fillEditor(item);

            function fillEditor(data) {
                currentSelection = data;
                document.getElementById("editor").classList.remove("hidden");
                document.getElementById("editorTitle").innerText = data.title;
                document.getElementById("editorYear").innerText =
                    data.year || "----";
                document.getElementById("editorCover").src = data.cover;

                const statusToSelect = data.status || "Jugando";
                const radios = document.getElementsByName("status");
                for (const r of radios) {
                    if (r.value === statusToSelect) r.checked = true;
                }

                const score = data.score || 0;
                document.getElementById("scoreRange").value = score;
                document.getElementById("scoreValue").innerText = score;

                // Favorito (Miramos en la lista global)
                isFavorite = window.favoritesTitles.includes(data.title);
                updateFavBtn();

                // Mensuales
                renderMonthTags();
                checkScoreLock();
            }
            window.closeEditor = () =>
                document.getElementById("editor").classList.add("hidden");

            // --- TAGS MENSUALES (NUEVA L칍GICA) ---
            window.addMonthTag = () => {
                const m = document.getElementById("tagMonth").value; // "01"
                const y = document.getElementById("tagYear").value; // "2026"
                if (!m || !y) return;

                const dateStr = `${y}-${m}`; // "2026-01"

                // A침adir al array global si no existe esa fecha para este juego
                const exists = window.monthlyPicksGlobal.some(
                    (entry) =>
                        entry.month === dateStr &&
                        entry.title === currentSelection.title,
                );

                if (!exists) {
                    window.monthlyPicksGlobal.push({
                        month: dateStr,
                        title: currentSelection.title,
                        cover: currentSelection.cover,
                    });
                    // Ordenar globalmente por fecha (opcional, pero limpio)
                    window.monthlyPicksGlobal.sort((a, b) =>
                        b.month.localeCompare(a.month),
                    );
                    renderMonthTags();
                }
            };

            window.removeMonthTag = (dateStr) => {
                window.monthlyPicksGlobal = window.monthlyPicksGlobal.filter(
                    (entry) =>
                        !(
                            entry.month === dateStr &&
                            entry.title === currentSelection.title
                        ),
                );
                renderMonthTags();
            };

            function renderMonthTags() {
                const container = document.getElementById(
                    "monthlyTagsContainer",
                );
                // Filtrar tags de ESTE juego
                const thisGameTags = window.monthlyPicksGlobal.filter(
                    (entry) => entry.title === currentSelection.title,
                );

                if (thisGameTags.length === 0) {
                    container.innerHTML =
                        '<span class="text-xs text-gray-500 italic">No ha sido juego del mes.</span>';
                    return;
                }

                container.innerHTML = thisGameTags
                    .map((tag) => {
                        const [y, m] = tag.month.split("-");
                        const display = `${m}/${y.slice(2)}`; // 01/26
                        return `
                    <div class="tag-pill">
                        ${display}
                        <button onclick="removeMonthTag('${tag.month}')" class="text-indigo-400 hover:text-white transition"><i class="fa-solid fa-xmark"></i></button>
                    </div>
                `;
                    })
                    .join("");
            }

            // --- FAVORITO ---
            window.toggleFav = () => {
                isFavorite = !isFavorite;
                updateFavBtn();
            };
            function updateFavBtn() {
                const btn = document.getElementById("favBtn");
                btn.className = isFavorite
                    ? "w-10 h-10 rounded-full border border-red-500/50 flex items-center justify-center transition-all bg-red-500 text-white shadow-[0_0_15px_rgba(239,68,68,0.5)]"
                    : "w-10 h-10 rounded-full border border-white/10 flex items-center justify-center transition-all bg-[#202025] text-gray-500 hover:text-white";
            }

            window.checkScoreLock = () => {
                const status = document.querySelector(
                    'input[name="status"]:checked',
                ).value;
                const range = document.getElementById("scoreRange");
                if (status === "Completado") {
                    range.disabled = false;
                    document.getElementById("scoreContainer").style.opacity =
                        "1";
                    if (document.getElementById("scoreValue").innerText === "-")
                        document.getElementById("scoreValue").innerText =
                            range.value;
                } else {
                    range.disabled = true;
                    document.getElementById("scoreContainer").style.opacity =
                        "0.5";
                    document.getElementById("scoreValue").innerText = "-";
                }
            };
            document
                .getElementById("scoreRange")
                .addEventListener(
                    "input",
                    (e) =>
                        (document.getElementById("scoreValue").innerText =
                            e.target.value),
                );

            // --- GUARDAR (SIN POPUPS, SOLO FEEDBACK VISUAL) ---
            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveMediaBtn");
                    const originalText = btn.innerText;
                    btn.innerHTML = `<i class="fa-solid fa-circle-notch fa-spin"></i> Guardando...`;
                    btn.disabled = true;

                    const status = document.querySelector(
                        'input[name="status"]:checked',
                    ).value;
                    const finalScore =
                        status === "Completado"
                            ? Number(
                                  document.getElementById("scoreRange").value,
                              )
                            : 0;

                    // 1. Actualizar Favs Globales
                    if (
                        isFavorite &&
                        !window.favoritesTitles.includes(currentSelection.title)
                    ) {
                        window.favoritesTitles.push(currentSelection.title);
                    } else if (!isFavorite) {
                        window.favoritesTitles = window.favoritesTitles.filter(
                            (t) => t !== currentSelection.title,
                        );
                    }

                    // 2. Payloads
                    const payloadFile = {
                        ...currentSelection,
                        status,
                        score: finalScore,
                    };

                    // Enviamos los favoritos y los mensuales globales
                    const payloadDB = {
                        type: "update_db",
                        favorites: window.favoritesTitles,
                        monthlyPicks: window.monthlyPicksGlobal,
                    };

                    try {
                        await Promise.all([
                            fetch("/api/save.json", {
                                method: "POST",
                                body: JSON.stringify(payloadFile),
                            }),
                            fetch("/api/save.json", {
                                method: "POST",
                                body: JSON.stringify(payloadDB),
                            }),
                        ]);

                        closeEditor();

                        // Feedback visual sutil: cambiar el texto del bot칩n "Nuevo" o "Editar" temporalmente
                        // (Para simplificar, el bot칩n del modal ya ha hecho su funci칩n)
                    } catch (e) {
                        console.error(e);
                    }

                    btn.innerText = originalText;
                    btn.disabled = false;
                });

            // --- ORDENAR FAVORITOS ---
            function renderFavoritesSortable() {
                const container = document.getElementById("favList");
                const favObjects = window.favoritesTitles
                    .map((title) =>
                        window.localLibrary.find(
                            (item) => item.title === title,
                        ),
                    )
                    .filter((item) => item !== undefined);

                container.innerHTML = favObjects
                    .map(
                        (item) => `
                <div class="fav-item relative aspect-[2/3] bg-[#18181b] rounded-xl overflow-hidden cursor-grab ring-1 ring-white/10 hover:ring-white/30" data-title="${item.title}">
                    <img src="${item.cover}" class="w-full h-full object-cover pointer-events-none">
                </div>
            `,
                    )
                    .join("");

                new Sortable(container, { animation: 150, onEnd: () => {} });
            }

            document
                .getElementById("saveOrderBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveOrderBtn");
                    btn.innerText = "Guardando...";

                    const newOrderTitles = [];
                    document
                        .querySelectorAll("#favList .fav-item")
                        .forEach((el) => newOrderTitles.push(el.dataset.title));
                    window.favoritesTitles = newOrderTitles;

                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify({
                            type: "update_db",
                            favorites: newOrderTitles,
                        }),
                    });

                    btn.innerText = "춰Guardado!";
                    btn.classList.add("bg-green-600", "text-white");
                    setTimeout(() => {
                        btn.innerText = "Guardar Orden";
                        btn.classList.remove("bg-green-600", "text-white");
                    }, 2000);
                });
        </script>
    </body>
