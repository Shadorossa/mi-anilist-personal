        <script is:inline>
            let currentSelection = null;
            let lastSearchResults = [];
            let isFavorite = false;

            // --- INICIALIZAR INPUT A칌O ---
            document.getElementById("tagYear").value = new Date().getFullYear();

            // --- GESTI칍N DE MODOS ---
