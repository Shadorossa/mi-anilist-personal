            let currentSelection = null;
            let isFavorite = false;
            let currentPickYear = new Date().getFullYear();
            let currentCharPickYear = new Date().getFullYear();

            let currentSagaForHof = null;

            window.createNewCharacter = () => {
                currentSelection = {
                    id: `custom-${Date.now()}`, // Unique ID for new characters
                    title: "",
                    source: "",
                    cover: "https://placehold.co/240x360/111/333?text=Pegar+Imagen",
