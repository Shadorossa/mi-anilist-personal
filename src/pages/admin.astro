---
// src/pages/admin.astro
---

<html lang="es" class="dark">
    <head>
        <title>Admin Dashboard</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
    </head>
    <body
        class="bg-gray-950 text-gray-200 font-sans h-screen flex overflow-hidden"
    >
        <aside
            class="w-64 bg-gray-900 border-r border-gray-800 flex flex-col p-6 gap-2"
        >
            <h1
                class="text-xl font-bold text-white mb-8 tracking-wider flex items-center gap-2"
            >
                <i class="fa-solid fa-terminal text-indigo-500"></i> SYSTEM
            </h1>

            <button
                onclick="switchTab('media')"
                class="nav-btn active w-full text-left px-4 py-3 rounded-lg text-gray-400 hover:bg-gray-800 hover:text-white transition flex items-center gap-3"
            >
                <i class="fa-solid fa-gamepad"></i> Añadir Contenido
            </button>
            <button
                onclick="switchTab('profile')"
                class="nav-btn w-full text-left px-4 py-3 rounded-lg text-gray-400 hover:bg-gray-800 hover:text-white transition flex items-center gap-3"
            >
                <i class="fa-solid fa-user"></i> Editar Perfil
            </button>

            <div class="mt-auto">
                <a
                    href="/"
                    class="block w-full text-center px-4 py-3 rounded-lg border border-gray-700 hover:bg-gray-800 transition text-sm"
                >
                    <i class="fa-solid fa-arrow-left"></i> Volver a la Web
                </a>
            </div>
        </aside>

        <main class="flex-1 overflow-y-auto p-8 lg:p-12 relative">
            <div id="media" class="panel max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold text-white mb-2">
                    Base de Datos
                </h2>
                <p class="text-gray-500 mb-8">
                    Busca en IGDB (Juegos) o Anilist (Anime/Manga) para añadir a
                    tu perfil.
                </p>

                <div
                    class="bg-gray-900 p-4 rounded-xl border border-gray-800 shadow-xl mb-8"
                >
                    <form
                        id="searchForm"
                        class="flex flex-col md:flex-row gap-4"
                    >
                        <select
                            id="mediaType"
                            class="bg-gray-800 border border-gray-700 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-indigo-500"
                        >
                            <option value="game">Videojuego</option>
                            <option value="anime">Anime</option>
                            <option value="manga">Manga</option>
                        </select>
                        <div class="flex-1 relative">
                            <input
                                type="text"
                                id="searchInput"
                                placeholder="Escribe el título (ej: Elden Ring)..."
                                autocomplete="off"
                                class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg pl-10 pr-4 py-3 focus:outline-none focus:border-indigo-500"
                            />
                            <i
                                class="fa-solid fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-500"
                            ></i>
                        </div>
                        <button
                            type="submit"
                            class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-bold transition shadow-lg shadow-indigo-500/20"
                        >
                            Buscar
                        </button>
                    </form>
                </div>

                <div
                    id="searchResults"
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                >
                </div>

                <div
                    id="editor"
                    class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4"
                >
                    <div
                        class="bg-gray-900 border border-gray-700 rounded-2xl w-full max-w-md p-6 shadow-2xl relative"
                    >
                        <button
                            onclick="closeEditor()"
                            class="absolute top-4 right-4 text-gray-500 hover:text-white"
                            ><i class="fa-solid fa-times text-xl"></i></button
                        >

                        <h3
                            class="text-xl font-bold text-white mb-6 flex items-center gap-2"
                        >
                            <i class="fa-solid fa-pen-to-square text-indigo-500"
                            ></i> Detalles
                        </h3>

                        <div class="space-y-4">
                            <div>
                                <label
                                    class="block text-xs uppercase text-gray-500 font-bold mb-2"
                                    >Título</label
                                >
                                <input
                                    type="text"
                                    id="editorTitle"
                                    disabled
                                    class="w-full bg-gray-800 border border-gray-700 text-gray-400 rounded-lg px-3 py-2"
                                />
                            </div>

                            <div>
                                <label
                                    class="block text-xs uppercase text-gray-500 font-bold mb-2"
                                    >Estado</label
                                >
                                <select
                                    id="statusInput"
                                    class="w-full bg-gray-800 border border-gray-700 text-white rounded-lg px-3 py-2"
                                >
                                    <option value="Jugando"
                                        >Jugando / Viendo</option
                                    >
                                    <option value="Completado"
                                        >Completado</option
                                    >
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Abandonado"
                                        >Abandonado</option
                                    >
                                </select>
                            </div>

                            <div>
                                <label
                                    class="block text-xs uppercase text-gray-500 font-bold mb-2"
                                    >Puntuación (0-10)</label
                                >
                                <div class="flex items-center gap-4">
                                    <input
                                        type="range"
                                        id="scoreRange"
                                        min="0"
                                        max="10"
                                        step="1"
                                        value="5"
                                        class="w-full h-2 bg-gray-700 rounded-lg appearance-none cursor-pointer"
                                    />
                                    <span
                                        id="scoreValue"
                                        class="text-xl font-bold text-indigo-400 w-8"
                                        >5</span
                                    >
                                </div>
                            </div>

                            <button
                                id="saveMediaBtn"
                                class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg font-bold mt-4 transition flex justify-center items-center gap-2"
                            >
                                <i class="fa-solid fa-save"></i> Guardar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="profile" class="panel hidden max-w-2xl mx-auto">
                <h2 class="text-3xl font-bold text-white mb-8">
                    Editar Perfil
                </h2>

                <div class="space-y-6">
                    <div>
                        <label class="block text-sm text-gray-400 mb-2"
                            >Username</label
                        >
                        <input
                            type="text"
                            id="usernameInput"
                            class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:border-indigo-500 outline-none"
                        />
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-2"
                            >Bio</label
                        >
                        <textarea
                            id="bioInput"
                            rows="3"
                            class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:border-indigo-500 outline-none"
                        ></textarea>
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-2"
                            >Banner URL</label
                        >
                        <input
                            type="url"
                            id="bannerUrlInput"
                            class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:border-indigo-500 outline-none"
                        />
                    </div>
                    <div>
                        <label class="block text-sm text-gray-400 mb-2"
                            >Avatar URL</label
                        >
                        <input
                            type="url"
                            id="avatarUrlInput"
                            class="w-full bg-gray-900 border border-gray-700 text-white rounded-lg px-4 py-3 focus:border-indigo-500 outline-none"
                        />
                    </div>
                    <button
                        id="saveProfileBtn"
                        class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg transition"
                    >
                        Actualizar Perfil
                    </button>
                </div>
            </div>
        </main>

        <script is:inline>
            let currentSelection = null;
            let lastResults = [];

            // UI TABS
            window.switchTab = (id) => {
                document
                    .querySelectorAll(".panel")
                    .forEach((el) => el.classList.add("hidden"));
                document.getElementById(id).classList.remove("hidden");
            };

            // RANGE SLIDER UI
            const range = document.getElementById("scoreRange");
            const val = document.getElementById("scoreValue");
            range.addEventListener(
                "input",
                (e) => (val.innerText = e.target.value),
            );

            // BÚSQUEDA
            document
                .getElementById("searchForm")
                .addEventListener("submit", async (e) => {
                    e.preventDefault();
                    const query = document.getElementById("searchInput").value;
                    const type = document.getElementById("mediaType").value;
                    const container = document.getElementById("searchResults");

                    container.innerHTML =
                        '<div class="text-center col-span-full py-10"><i class="fa-solid fa-spinner fa-spin text-3xl text-indigo-500"></i></div>';

                    try {
                        const res = await fetch(
                            `/api/search.json?q=${encodeURIComponent(query)}&type=${type}`,
                        );
                        const data = await res.json();

                        if (data.error) throw new Error(data.error);
                        if (data.length === 0)
                            throw new Error("No se encontraron resultados");

                        lastResults = data;
                        container.innerHTML = data
                            .map(
                                (item, idx) => `
                    <div onclick="openEditor(${idx})" class="bg-gray-800 rounded-lg p-3 flex gap-4 cursor-pointer hover:bg-gray-700 border border-transparent hover:border-indigo-500 transition group">
                        <img src="${item.cover}" class="w-16 h-24 object-cover rounded bg-gray-900">
                        <div class="flex-1 min-w-0">
                            <h4 class="font-bold text-white truncate group-hover:text-indigo-400">${item.title}</h4>
                            <p class="text-sm text-gray-500">${item.year}</p>
                            <div class="mt-2 text-xs font-bold text-yellow-500">⭐ ${item.score}</div>
                        </div>
                    </div>
                `,
                            )
                            .join("");
                    } catch (err) {
                        container.innerHTML = `<div class="col-span-full bg-red-900/20 border border-red-800 text-red-200 p-4 rounded-lg text-center">❌ ${err.message}</div>`;
                    }
                });

            // EDITOR
            window.openEditor = (idx) => {
                currentSelection = lastResults[idx];
                document.getElementById("editor").classList.remove("hidden");
                document.getElementById("editorTitle").value =
                    currentSelection.title;
                document.getElementById("scoreRange").value =
                    currentSelection.score;
                document.getElementById("scoreValue").innerText =
                    currentSelection.score;
            };

            window.closeEditor = () => {
                document.getElementById("editor").classList.add("hidden");
            };

            // GUARDAR
            document
                .getElementById("saveMediaBtn")
                .addEventListener("click", async () => {
                    const btn = document.getElementById("saveMediaBtn");
                    const originalText = btn.innerHTML;
                    btn.innerHTML =
                        '<i class="fa-solid fa-spinner fa-spin"></i> Guardando...';
                    btn.disabled = true;

                    const type = document.getElementById("mediaType").value;
                    const folder =
                        type === "game"
                            ? "games"
                            : type === "manga"
                              ? "manga"
                              : "anime";

                    const payload = {
                        ...currentSelection,
                        type: folder,
                        status: document.getElementById("statusInput").value,
                        score: Number(
                            document.getElementById("scoreRange").value,
                        ),
                    };

                    try {
                        await fetch("/api/save.json", {
                            method: "POST",
                            body: JSON.stringify(payload),
                        });
                        closeEditor();
                        alert("¡Guardado!");
                        document.getElementById("searchResults").innerHTML = "";
                        document.getElementById("searchInput").value = "";
                    } catch (e) {
                        alert("Error al guardar");
                    }

                    btn.innerHTML = originalText;
                    btn.disabled = false;
                });

            // GUARDAR PERFIL
            document
                .getElementById("saveProfileBtn")
                .addEventListener("click", async () => {
                    const payload = {
                        type: "profile_config",
                        username:
                            document.getElementById("usernameInput").value,
                        bio: document.getElementById("bioInput").value,
                        bannerUrl:
                            document.getElementById("bannerUrlInput").value,
                        avatarUrl:
                            document.getElementById("avatarUrlInput").value,
                    };

                    const btn = document.getElementById("saveProfileBtn");
                    btn.innerText = "Procesando...";

                    await fetch("/api/save.json", {
                        method: "POST",
                        body: JSON.stringify(payload),
                    });
                    alert("Perfil actualizado.");
                    btn.innerText = "Actualizar Perfil";
                });
        </script>
    </body>
</html>
